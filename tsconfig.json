{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noEmit": true,
    "lib": ["ESNext", "dom"],
    "types": [
      "node",
      "vuetify"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
},
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
    "*.js",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "public/worker/DebuggerWorker.ts",
    "src/types/**/*.d.ts"  // Ensure this line covers your custom types directory
  ]  
}
